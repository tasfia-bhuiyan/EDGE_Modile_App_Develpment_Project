<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#6200EE"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"

        android:contentDescription="Contact Us Image"
        android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: +1-234-567-890"
            android:textSize="18sp"
            android:textColor="#0000EE"
            android:textStyle="bold"

            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: contact@eventmanagement.com"
            android:textSize="18sp"

            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook: @EventManagementApp"
            android:textSize="18sp"

            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website: www.eventmanagement.com"
            android:textSize="18sp"

            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 123 Event St, New York, USA"
            android:textSize="18sp"

            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>
